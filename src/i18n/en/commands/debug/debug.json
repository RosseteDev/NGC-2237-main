{
  "command": {
    "name": "debug",
    "description": "Control debug mode (Admin Only)",
    "aliases": ["depuracion", "modo-debug"]
  },
  "subcommands": {
    "enable": {
      "description": "Enable debug mode",
      "options": {
        "modules": {
          "type": "string",
          "description": "Modules to debug (comma-separated, * for all)",
          "required": false
        }
      }
    },
    "disable": {
      "description": "Disable debug mode"
    },
    "status": {
      "description": "Show debug status"
    },
    "level": {
      "description": "Change log level",
      "options": {
        "level": {
          "type": "string",
          "description": "Log level",
          "required": true,
          "choices": [
            { "name": "Error", "value": "error" },
            { "name": "Warn", "value": "warn" },
            { "name": "Info", "value": "info" },
            { "name": "Debug", "value": "debug" }
          ]
        }
      }
    }
  },
  "metadata": {
    "guildOnly": true,
    "permissions": {
      "user": ["Administrator"]
    }
  },
  "responses": {
    "enabled_title": "‚úÖ Debug Enabled",
    "enabled_description": "**Modules:** {modules}\n\n‚ö†Ô∏è This only affects this bot instance.\nLogs will be more detailed.",
    "disabled_title": "‚ùå Debug Disabled",
    "disabled_description": "Debug messages will no longer be shown.",
    "status_title": "üîç Logger Status",
    "status_description": "**Status:** {status}\n**Modules:** {modules}\n**Log Level:** {level}\n**Timestamp:** {timestamp}\n**Colors:** {colors}",
    "level_title": "üìä Level Updated",
    "level_description": "Log level changed to: **{level}**",
    "yes": "Yes",
    "no": "No",
    "none": "None"
  }
}